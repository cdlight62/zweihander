<div class="form-group">
  <label>Distance</label>
  <input name="system.distance" type="text" value="{{system.distance}}">
</div>

<div class="form-group">
  <label>Remnant</label>
  <input name="system.tradition" type="text" value="{{system.tradition}}">
</div>

<div class="form-group">
  <label>Power Level</label>
  <input name="system.principle" type="text" value="{{system.principle}}">
</div>

<div class="form-group">
  <label>Tithe Cost</label>
  <input name="system.titheCost" type="number" value="{{system.titheCost}}">
</div>

<div class="form-group">
  <label>Duration</label>
  <input name="system.duration" type="text" value="{{system.duration}}">
</div>

{{#if (eq settings.gameSystem 'fof') }}
<div class="form-group">
  <label>Casting Time</label>
  <input name="system.castingTime" type="text" value="{{system.castingTime}}">
</div>
<div class="form-group">
  <label>Casting AP Cost</label>
  <input name="system.castingCost" type="number" value="{{system.castingCost}}">
</div>
{{/if}}

<div class="form-group stacked">
  <label><a class="open-editor">Effect <i class="fa fa-edit"></i></a></label>
    <div class="zh-editor-preview open">{{{zhProcessRuleText (zhLocalize system.rules.effect)}}}</div>
  {{editor content=(zhLocalize system.rules.effect) target=(zhLocalizePath "system.rules.effect") button=true owner=owner editable=editable}}
</div>

<div class="form-group stacked">
  <label><a class="open-editor">Critical Success <i class="fa fa-edit"></i></a></label>
    <div class="zh-editor-preview open">{{{zhProcessRuleText (zhLocalize system.rules.criticalSuccess)}}}</div>
  {{editor content=(zhLocalize system.rules.criticalSuccess) target=(zhLocalizePath "system.rules.criticalSuccess") button=true owner=owner editable=editable}}
</div>

<div class="form-group stacked">
  <label><a class="open-editor">Critical Failure<i class="fa fa-edit"></i></a></label>
    <div class="zh-editor-preview open">{{{zhProcessRuleText (zhLocalize system.rules.criticalFailure)}}}</div>
  {{editor content=(zhLocalize system.rules.criticalFailure) target=(zhLocalizePath "system.rules.criticalFailure") button=true owner=owner editable=editable}}
</div>