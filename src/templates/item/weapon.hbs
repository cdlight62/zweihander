<div class="form-group">
  <label>Associated Skill</label>
  <select name="system.associatedSkill">
    {{#select system.associatedSkill}}
    {{#each skills as | skill idx | }}
      <option value="{{skill}}">{{skill}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>
<div class="form-group">
  <label>Load</label>
  <input  name="system.load" type="number" value="{{system.load}}">
</div>
<div class="form-group">
  <label>Handling</label>
  <input  name="system.handling" type="text" value="{{system.handling}}">
</div>
<div class="form-group">
  <label>Distance</label>
  <input  name="system.distance" type="text" value="{{system.distance}}">
</div>
<div class="form-group">
  <label>Qualities</label>
  <input name="system.qualities.value" type="text" value="{{system.qualities.value}}">
</div>
<div class="form-group">
  <label>Type</label>
  <input  name="system.weaponType" type="text" value="{{system.weaponType}}">
</div>
<div class="form-group">
  <label>Damage Formula</label>
  <input  name="system.damage.formula" type="text" value="{{system.damage.formula}}">
</div>
<div class="form-group">
  <label>Condition</label>
  <select name="system.condition">
    {{#each choices.conditions}}
    <option value="{{value}}" {{selected}}>{{label}}</option>
    {{/each}}
  </select>
</div>
<div class="form-group stacked">
  <label>Immune to Degradation</label>
  <label class="checkbox">
    <input name="system.noDegradation" type="checkbox" class="link-checkbox" {{checked system.noDegradation}} />
  </label>
</div>
{{zhPriceInputs system.price}}
