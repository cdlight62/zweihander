<div class="form-group">
  <label>Encumbrance</label>
  <input  name="system.encumbrance" type="number" value="{{system.encumbrance}}">
</div>

<div class="form-group">
  <label>Damage Threshold Modifier</label>
  <input  name="system.damageThresholdModifier" type="number" value="{{system.damageThresholdModifier}}">
</div>

<div class="form-group">
  <label>Qualities</label>
  <input  name="system.qualities.value" type="text" value="{{system.qualities.value}}">
</div>

<div class="form-group">
  <label>Condition</label>
  <select name="system.condition">
    {{#each choices.conditions}}
    <option value="{{value}}" {{selected}}>{{label}}</option>
    {{/each}}
  </select>
</div>
<div class="form-group stacked">
  <label>Immune to Degradation</label>
  <label class="checkbox">
    <input name="system.noDegradation" type="checkbox" class="link-checkbox" {{checked system.noDegradation}} />
  </label>
</div>

<div class="form-group stacked">
  <label>Status</label>
  <label class="checkbox">
    <input name="system.equipped" type="checkbox" class="link-checkbox" {{checked system.equipped}} />
    Equipped
  </label>
</div>

{{zhPriceInputs system.price}}