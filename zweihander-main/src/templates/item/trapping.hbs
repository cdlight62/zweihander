<div class="form-group">
  <label>Trapping Type</label>
  <input name="{{zhLocalizePath 'system.details.category'}}" type="text" value="{{zhLocalize system.details.category}}">
</div>

<div class="form-group">
  <label>Quantity</label>
  <input name="system.quantity" type="number" value="{{system.quantity}}">
</div>

<div class="form-group">
  <label>Encumbrance (Single)</label>
  <input name="system.encumbrance" type="number" value="{{system.encumbrance}}">
</div>

<div class="form-group stacked">
  <label><a class="open-editor">Effect <i class="fa fa-edit"></i></a></label>
    <div class="zh-editor-preview open">{{{zhProcessRuleText (zhLocalize system.rules.effect)}}}</div>
  {{editor content=(zhLocalize system.rules.effect) target=(zhLocalizePath "system.rules.effect") button=true owner=owner editable=editable}}
</div>

{{zhPriceInputs system.price}}

